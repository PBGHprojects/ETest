@model ETest.Web.Models.CatalogEditViewModel

@{
    ViewBag.Title = "Edit Catalog";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("EditSave", "Catalog", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)

    <div>
        <div class="form-group">
            @Html.LabelFor(model => model.Code)
            <div>
                @Html.EditorFor(model => model.Code)
                @Html.ValidationMessageFor(model => model.Code, null, new { @class = "text-warning" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description)
            <div>
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description, null, new { @class = "text-warning" })
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Edit" class="btn btn-primary" />
        </div>
    </div>
}