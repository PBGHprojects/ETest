@model ETest.Web.Models.CatalogCreateViewModel

@{
    ViewBag.Title = "Create Catalog";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <div class="form-group">
            @Html.LabelFor(model => model.Code)
            <div>
                @Html.EditorFor(model => model.Code)
                @Html.ValidationMessageFor(model => model.Code, null, new { @class = "text-warning" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description)
            <div>
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description, null, new { @class = "text-warning" })
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
}

