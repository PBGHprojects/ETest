@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@Html.Partial("_DeleteModal", new ViewDataDictionary {
    { "Title", "Delete Product" },
    { "Message", "Are you sure you want to delete this product?" }
})

@Html.AntiForgeryToken()

<table class="table">
    <thead class="bg-primary">
        <tr>
            <th>Id</th>
            <th>Code</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in ViewBag.Products)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Code</td>
                <td>@item.Description</td>
                <td class="text-right">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    <button type="button" onclick="confirmDelete(@item.Id)" class="btn-link">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.Hidden("delete-product-id")

@section Scripts {
    <script type="text/javascript">
        function confirmDelete(id) {
            $('#delete-product-id').val(id);
            $('#delete-modal').modal('show');
        }

        function deleteEntry() {
            const id = $('#delete-product-id').val();
            if (id) {
                $.ajax({
                    type: 'DELETE',
                    url: `/Product/Delete/${id}`,
                    data: {
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    error: () => {
                        toastr.error('An error occurred while attempting to delete product.', 'Error');
                    },
                    success: () => {
                        window.location.reload();
                    }
                });
            }
        }
    </script>
}

