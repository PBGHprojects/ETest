@model ETest.Web.Models.ProductEditViewModel

@{
    ViewBag.Title = "Edit Product";

    var catalogsAvailable = Model.AvailableCatalogs?.Any() ?? false;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("EditSave", "Product", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)

    <div>
        <div class="form-group">
            @Html.LabelFor(model => model.Code)
            <div>
                @Html.EditorFor(model => model.Code)
                @Html.ValidationMessageFor(model => model.Code, null, new { @class = "text-warning" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description)
            <div>
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description, null, new { @class = "text-warning" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CatalogIds, "Catalogs")
            <div>
                @if (!catalogsAvailable)
                {
                    <p class="text-danger">No available catalogs.</p>
                }
                else
                {
                    @Html.ListBoxFor(model => model.CatalogIds, (MultiSelectList)Model.AvailableCatalogs, new { @class = "dropdown-change-alert" })
                    @Html.ValidationMessageFor(model => model.CatalogIds, null, new { @class = "text-warning" })
                }
            </div>
        </div>

        @if (catalogsAvailable)
        {
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        }
    </div>
}

@section Scripts {
    <script src="~/Scripts/change-alert.js"></script>
}